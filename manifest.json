{

    "manifest_version": 2,

    "name": "Crypto Tracker",
    "version": "0.58",
    "description": "Be up to date and track your favorite crypto coin price.",

    "icons": {
        "19": "images/cryptocoin.png",
        "38": "images/cryptocoin.png",
        "128": "images/cryptocoin.png"
    },

    "browser_action": {
        "default_title": "CryptoTracker",
        "default_icon": {
            "19": "images/cryptocoin.png", 
            "38": "images/cryptocoin.png"
        },
        "default_popup": "html/main.html"
    },


    "options_page": "html/options.html",
    "homepage_url": "https://github.com/dinhnerz/CryptoTracker#-cryptotracker",

    "permissions": [ 
      "storage"
  ]
    
}

