{
    //manifest spec: http://developer.chrome.com/extensions/manifest.html
    //required
    "name": "CryptoTrakker",
    "version": "0.19",
    "manifest_version": 2,

    //recommended
    "description": "Track your favorite Crypto currency coin!",
    "icons": {
        "19": "images/cryptocoin.png",
        "38": "images/cryptocoin.png",
        "128": "images/cryptocoin.png" //icon inside the chrome://extension
    },

    //required
    "browser_action": {
        "default_title": "CryptoTrakker",
        "default_icon": {
            "19": "images/cryptocoin.png", //chrome broswer icon
            "38": "images/cryptocoin.png"
        },
        "default_popup": "html/main.html"
    },

    //additional
    "options_page": "html/options.html",
    "homepage_url": "https://github.com/dinhnerz/CryptoTrakker",

       "permissions": [
          "storage"
    ]
    
}
